# the data frame
Q4_data <- data.frame(
x = c(16,12,15,13,11),
y_predicted= c(56.86,146.38,79.2415,124,168.76),
residuals= c(-21.86,-66.38,30.76,26,31.24),
y = NaN)
# finding y
for (i in 1:5){Q4_data$y[i]=Q4_data$y_predicted[i]+Q4_data$residuals[i]}
#part 2
plot(Q4_data$x, Q4_data$y,
main = "x and y",
xlab = "x",
ylab = "y",
xlim = c(0,25),
ylim = c(0,250),)
#part 3
plot(Q4_data$x, Q4_data$y,
main = "x and y",
xlab = "x",
ylab = "y",
xlim = c(10,25),
ylim = c(0,250),)
#trendline y = -22.38x+414.94 (part1)
lm_Q4=lm(Q4_data$y ~ Q4_data$x)
abline(lm_Q4)
lm_Q4
