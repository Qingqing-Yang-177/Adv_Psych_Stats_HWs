# The Data frame
Q1_data <- data.frame(categories=c("Orange","Blue","Green","Red","Maroon"),
freq = c(21,21,18,19,20))
# Creating the Bar Plot
barplot(Q1_data$freq,names.arg = Q1_data$categories, ylim=c(0,25),
xlab = "Categories",
ylab = "Events",
main = "Categories and Events")
# Appropriate measure of central tendency
mode <- Q1_data$categories[Q1_data$freq==max(Q1_data$freq)]
mode
# The data frame
Q2_data <- data.frame(Participant = 1:15,
Introspection = c(51,65,74,74,75,76,87,86,51,85,52,92,97,70,86),
Optimism = c(55,80,71,66,74,68,51,67,74,67,81,83,87,74,84))
# Pearson's r
cor.test(Q2_data$Introspection, Q2_data$Optimism,method = "pearson")
# creating the plot
plot(Q2_data$Introspection, Q2_data$Optimism,
main = "Introspection and Optimism", xlab = "Introspection", ylab = "Optimism")
# linear regression
lm_Q2=lm(Q2_data$Introspection ~ Q2_data$Optimism)
abline(lm_Q2)
lm_Q2
